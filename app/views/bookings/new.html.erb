

  <h1>Book now!</h1>


  <div class="container-form">
    <div class="row">
      <div class="col-xs-12 col-md-7">
        <div class="image-cover" style="background-image:  url(<%= image_path 'eventspaces/exp1' %>);">
        </div>
      </div>

      <div class="col-xs-12 col-md-4" id="booking-form">
        <%= simple_form_for([@space, @booking]) do |f| %>
          <%= f.input :start_date, as: :date %>
          <%= f.input :end_date, as: :date %>
          <%= f.submit class: "btn btn-default btn-submit" %>
        <% end %>

      </div>
    </div>
  </div>

  <div class="btn btn-default margin-top">
  <%= link_to 'See all spaces', spaces_path %>
  </div>
