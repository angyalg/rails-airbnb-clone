

  <h1>Book now!</h1>


  <div class="container">
    <div class="row">

      <div class="col-xs-10 col-xs-offset-1" id="booking-form">
        <%= simple_form_for([@space, @booking]) do |f| %>
          <%= f.input :start_date, as: :date, :wrapper_html => { :id => 'start' } %>
          <%= f.input :end_date, as: :date, :wrapper_html => { :id => 'end' } %>
          <%= f.submit class: "btn btn-default btn-submit", :wrapper_html => { :id => 'button1' } %>
        <% end %>

      </div>
    </div>
  </div>

  <div class="btn btn-default margin-top">
  <%= link_to 'See all spaces', spaces_path %>
  </div>

  <h5><strong>Price per day: </strong><%= @space.price_per_day %></h5>



